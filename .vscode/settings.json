{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.associations": {
    "*.js": "javascript",
    "*.css": "css",
    "*.html": "html"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "html.format.enable": true,
  "css.validate": true,
  "javascript.validate.enable": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/dist": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true
  },
  "editor.rulers": [80, 120],
  "editor.wordWrap": "on"
}
